{
    "compilerOptions": {
      "target": "es5",                          // Define a versão alvo do JavaScript
      "module": "commonjs",                     // Define o sistema de módulos
      "strict": true,                           // Habilita verificações rigorosas de tipo
      "esModuleInterop": true,                  // Permite importar módulos CommonJS como módulos ES6
      "skipLibCheck": true,                     // Ignora verificações de tipos nas bibliotecas
      "forceConsistentCasingInFileNames": true, // Garante a consistência nas maiúsculas/minúsculas dos arquivos
      "outDir": "./dist",                       // Pasta onde os arquivos compilados serão gerados
      "rootDir": "./src",                       // Diretório raiz dos arquivos de origem
      "resolveJsonModule": true                 // Permite a importação de arquivos JSON
    },
    "include": [
      "src/**/*.ts"                             // Inclui todos os arquivos TypeScript no diretório src
    ],
    "exclude": [
      "node_modules"                            // Exclui a pasta node_modules da compilação
    ]
  }
  